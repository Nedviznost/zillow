{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "skipLibCheck": true, // Ignoring type checking of declaration files
    "strict": false, // Turning off strict type checking
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Change this to "react" for JSX support
    "incremental": true,
    "noImplicitAny": false, // Allowing implicit "any" types
    "baseUrl": ".",
    "types": ["cypress", "@testing-library/cypress"]
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/webhook/index.ts",
    "src/components/molecules/Progress/CircularProgress.tsx" // Change the file extension to ".tsx"
  ]
}
